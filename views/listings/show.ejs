<% layout("/layouts/boilerplate") %>
<body>
    <h3>Listings Details:</h3>
    <div class="card">
        <img src="" class="card-img-top" alt="listing_image">
  <div class="card-body">
    <p class="card-text"><%= listing.title %></p>
    </div>

    <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li> &#8377; <%= listing.price.toLocaleString("en-IN") %>/night</li>
        <li><%= listing.country %></li>
        <li><%= listing.location %></li>
    </ul>
    <br>
    <a href="/listings/<%=listing._id %>/edit">Edit this Listing</a>
    <br><br>
    <form method="POST" action="/listings/<%=listing._id%>/?_method=DELETE">
        <button>Delete</button>
    </form>
</body>
